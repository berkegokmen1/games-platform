<%- include('./partials/_header.ejs') %>
    <link rel="stylesheet" href="/css/top10/top10-s.css">
</head>
<body>
    <%- include('./partials/_navbar.ejs') %> 
    <div class="container-lg">
        <%- include('./partials/_flash.ejs') %>

        <% if (page == "main") { %>
            <div class="m-2 d-flex justify-content-around row">
                <a class="btn btn-primary w-25" href="/top10/ttt">Top 10 Tic Tac Toe</a>
            </div>
            <div class="m-2 d-flex justify-content-around row">
                <a class="btn btn-primary w-50" href="/top10/ttt">Top 10 Tic Tac Toe</a>
            </div>
            <div class="m-2 d-flex justify-content-around row">
                <a class="btn btn-primary w-75" href="/top10/ttt">Top 10 Tic Tac Toe</a>
            </div>
            <div class="m-2 d-flex justify-content-around row">
                <a class="btn btn-primary w-50" href="/top10/ttt">Top 10 Tic Tac Toe</a>
            </div>
            <div class="m-2 d-flex justify-content-around row">
                <a class="btn btn-primary w-25" href="/top10/ttt">Top 10 Tic Tac Toe</a>
            </div>
        <% } else { %>
            <% if (page == "ttt") { %>
                <h3 class="text-center m-2">TIC TAC TOE TOP 10</h3>
                <hr>
                <div class="table-responsive-xxl card">
                    <table class="table table-hover table-striped">
                        <tbody>
                            <!-- TABLE HEADER -->
                            <thead class="table-dark"> 
                                <th scope="col">#</th>
                                <th scope="col">Username</th>
                                <th scope="col">Points</th>
                            </thead>
                            <% data.forEach((d) => { %>
                                <% var i = data.indexOf(d) %>
                                <% if (i % 2 == 0 ) { %>
                                    <tr class="table-light">
                                        <th scope="row"><%= i + 1 %></th>
                                        <td><a href="/p/<%= d.username %>"><%= d.username %></a></td>
                                        <td><%= d.points %></td>
                                    </tr>
                                <% } else { %>
                                    <tr class="table-secondary">
                                        <th scope="row"><%= i + 1 %></th>
                                        <td><a href="/p/<%= d.username %>"><%= d.username %></a></td>
                                        <td><%= d.points %></td>
                                    </tr>
                                <% } %> 
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        <% } %> 

        
    </div>


    <%- include('./partials/_footer.ejs') %> 

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha256-4+XzXVhsDmqanXGHaHvgh1gMQKX40OUvDEBTu8JcmNs=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <script src="/js/script-client.js"></script>
</body>
</html>